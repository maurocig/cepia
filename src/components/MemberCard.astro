---
import { type TeamMember } from "../types";
const { name, role, especialization } = Astro.props;
---

<div
  class="flex flex-col gap-4 aspect-[16/10] md:aspect-[16/13] lg:aspect-[16/10] p-4 border border-gray-800/10 bg-slate-100/50 rounded-md shadow-sm"
>
  <span class="text-bold text-xl">{name}</span>
  <div class="text-gray-700 flex flex-col gap-2">
    <span>{role}</span>
    <span>{especialization}</span>
  </div>
</div>
