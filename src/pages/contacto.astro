---
import { Input } from '../components/ui/input';
import Title from '../components/Title.astro';
import Layout from '../layouts/Layout.astro';
import Subtitle from '../components/Subtitle.astro';
import { Clock, Mail, MapPin, Phone, Pin } from 'lucide-astro';
---

<Layout title="Contacto - CEPIA">
  <main class="mx-auto mt-8 max-w-[1000px] space-y-8 px-4 pb-8 lg:px-0">
    <Title>Contacto</Title>
    <div class="grid w-full grid-cols-1 gap-4 md:grid-cols-2 lg:gap-6">
      <div
        class="rounded-lg border-gray-900/10 bg-slate-100 p-4 shadow-md md:p-6"
      >
        <Subtitle>Información de contacto</Subtitle>
        <ul class="space-y-3">
          <li class="flex items-center gap-2">
            <Mail /> ejemplo@gmail.com
          </li>
          <li class="flex items-center gap-2">
            <Phone /> +598 437 22794
          </li>
          <li class="flex items-center gap-2">
            <MapPin />
            <a href="https://maps.app.goo.gl/HabmPhHz9jwuoyPh9" target="_blank"
              >Calle 22 y 15, Atlántida, Canelones</a
            >
          </li>
          <li class="flex items-center gap-2">
            <Clock />
            <span>Lunes a viernes de 9:00 a 17:00</span>
          </li>
        </ul>
      </div>

      <!-- Formulario -->
      <div
        class="flex w-full flex-col gap-4 rounded-xl border-gray-900/10 bg-slate-100 p-4 shadow-md md:p-6"
      >
        <Subtitle>Dejanos tu consulta</Subtitle>
        <div class="flex flex-col">
          <label for="email-input" class="w-full">Email</label>
          <Input id="email-input" />
        </div>
      </div>
    </div>
  </main>
</Layout>
